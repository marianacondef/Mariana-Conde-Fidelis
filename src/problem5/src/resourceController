import { Request, Response } from 'express';
import Resource from '../models/resourceModel';

// New resource
export const newResource = async (req: Request, res: Response) => {
  try {
    const resource = new Resource(req.body); // req.body is the data sent by the client
    await resource.save(); 
    res.status(201).send(resource); // 201 is the status code for "created"
  } catch (error) {
    res.status(500).json({ error: error.message });
  }
};